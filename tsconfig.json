{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/domain/*": ["src/domain/*"],
      "@/application/*": ["src/application/*"],
      "@/infrastruture/*": ["src/infrastruture/*"],
      "@/presentation/*": ["src/presentation/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
